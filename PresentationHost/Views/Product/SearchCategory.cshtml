@model PagedList<Product>

<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>لیست محصولات</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb part end-->
<!-- product list part start-->
<section class="product_list section_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="product_sidebar">
                    <div class="single_sedebar">
                        <form asp-action="search">
                            <input type="text" name="q" placeholder="جست و جو">
                            <i class="ti-search"></i>
                        </form>
                    </div>
                    <div class="single_sedebar">
                        <div class="select_option">
                            <div class="select_option_list">دسته ها <i class="right fas fa-caret-down"></i> </div>
                            <div class="select_option_dropdown">
                                @foreach (var item in Model.Data)
                                {
                                <p>
                                <a asp-controller="Product" asp-action="SearchCategory" asp-route-category="@item.Category.CategoryName">
                                        @item.Category.CategoryName  
                                </a>
                                </p>

                                }
                            </div>
                        </div>
                    </div>
                 
                </div>
            </div>


            <div class="col-md-8">
                <div class="product_list">
                    <div class="row">
                        @foreach (var product in Model.Data)
                        {
                            <div class="col-lg-6 col-sm-6">
                                <div class="single_product_item">
                                    <img src="~/@product.Medias[0].Path" alt="#" class="img-fluid">
                                    <h3> <a asp-action="Detail" asp-route-id="@product.ProductID">@product.Name</a> </h3>
                                    <p>@product.Price تومان</p>
                                </div>
                            </div>
                        }


                    </div>
                  
                    <nav >
                        <ul class="pagination  justify-content-center">
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item="> <a class="page-link" asp-action="Search" asp-route-q="@ViewBag.q" asp-route-category="@ViewBag.category" asp-route-page="@i">@i</a></li>
                            }
                        </ul>
                    </nav>

                </div>
            </div>
        </div>
    </div>
</section>

<!-- client review part end -->
<!-- feature part here -->
